<div class="hero">
  <div class="container-narrow">
    <h1 class="display-title">Welcome Back</h1>
    <p class="lead">Sign in to Red Tape LA Admin</p>
  </div>
</div>

<div class="container-narrow">
  <section class="section">
    <div class="card-simple" style="max-width: 28rem; margin: 2rem auto;">

      <% if flash[:alert] %>
        <div class="alert alert-error">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: session_path, scope: :session do |form| %>
        <div class="form-group">
          <%= form.label :email_address, "Email" %>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              placeholder: "your@email.com" %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password,
              required: true,
              placeholder: "Enter your password" %>
        </div>

        <%= form.submit "Sign In", class: "btn btn-primary", style: "width: 100%;" %>
      <% end %>

      <div style="text-align: center; margin-top: 1rem;">
        <%= link_to "Forgot password?", new_password_path %>
      </div>
    </div>

    <div style="text-align: center; margin-top: 1.5rem;">
      <%= link_to "← Back to Public Site", root_path %>
    </div>
  </section>
</div>