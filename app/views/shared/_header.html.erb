<header>
  <nav class="main-navigation" data-controller="mobile-nav">
    <div class="nav-container">
      <div class="nav-brand">
        <%= link_to "Red Tape LA", root_path, class: "brand-link" %>
      </div>

      <!-- Hamburger button for mobile -->
      <button
        class="hamburger"
        data-mobile-nav-target="hamburger"
        data-action="click->mobile-nav#toggle"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        type="button">
        <span class="hamburger__line"></span>
        <span class="hamburger__line"></span>
        <span class="hamburger__line"></span>
      </button>

      <!-- Navigation links -->
      <ul class="nav-links" data-mobile-nav-target="menu">
        <li><%= link_to "Home", root_path, class: "nav-link", data: { action: "click->mobile-nav#closeOnLinkClick" } %></li>
        <li><%= link_to "Share Your Story", new_report_path, class: "nav-link", data: { action: "click->mobile-nav#closeOnLinkClick" } %></li>
        <li><%= link_to "About", about_path, class: "nav-link", data: { action: "click->mobile-nav#closeOnLinkClick" } %></li>
        <% if authenticated? %>
          <li><%= link_to "Admin", admin_reports_path, class: "nav-link", data: { action: "click->mobile-nav#closeOnLinkClick" } %></li>
          <li><%= button_to "Sign Out", session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
