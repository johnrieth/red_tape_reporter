        <span data-clipboard-target="url"><%= request.base_url %></span>
        <button data-action="click->clipboard#copy" data-clipboard-target="button" class="clipboard-copy-btn" title="Copy to clipboard">
          Copy
        </button>
      </div>
      <p class="mt-4 mb-0">
        <%= link_to "Share another story", new_report_path, class: "btn-link" %>
      </p>
    </section>
